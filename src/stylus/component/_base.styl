/*! --------------------------------------------------------------------------
 * Base
 * -------------------------------------------------------------------------- */

@require "../global/_all"

body
	position: relative
	margin-top: 1rem
	background-color: $color.background.body
	color: $color.text.base
	font-family: $font.sans
	font-size: 1rem
	font-weight: 400
	line-height: 1.5rem
	fontSmoothing()
	text-rendering: optimizeLegibility

::selection
	color: $color.background.body
	background-color: $color.background.selection

#app
	//clearfix()
	margin: 0 auto
	position: relative
	max-width: 1200px
	min-width: 800px
	width: 100%
	height: 95vh
	overflow: hidden
