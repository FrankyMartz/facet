/*! --------------------------------------------------------------------------
 * Calendar
 *
 * cal
 * cal_head
 * cal_head_btn
 * cal_head_btn-last
 * cal_head_btn-next
 * cal_head_title
 *
 * cal_table
 * cal_table_col-edge
 * cal_table_head
 * cal_table_body
 * cal_table_body_day
 * cal_table_body_day-today
 * cal_table_body_day-void
 *
 * -------------------------------------------------------------------------- */

 @require "../global/_all"

.cal
	display: inline-block
	box-sizing: border-box
	width: 65%
	//background-color: yellow
	border-right: 1rem solid $color.background.body


/*! Calendar: Head ---------------------------------------------------------- */
.cal_head
	height: 8.5rem
	text-align: center
	padding-top: 1rem

.cal_head_title
	font-size: 3rem
	line-height: 1.25em
	font-weight: 300
	& > i
		font-style: normal
		font-weight: 100

.cal_head_btn
	border: none
	background-color: transparent
	height: 4.5rem
	&:hover .cal_head_btn_arrow
		fill: $color.link.hover

.cal_head_btn_arrow
	fill: $color.link.default

.cal_head_btn-last
	float: left

.cal_head_btn-next
	float: right


/*! Calendar: Table---------------------------------------------------------- */
.cal_table
	width: 100%
	height: 100%
	//background-color: teal
	& td, & th
		width: 14.28571429%

.cal_table_col-edge
	background-color: $color.table.background.cell
	color: $color.table.text.weekend


/*! Calendar: Table::Head --------------------------------------------------- */
.cal_table_head
	text-align: right
	text-transform: capitalize
	& th
		padding-right: 0.75em
		padding-bottom: 0.5em
		font-weight: 400
		// Edge Cell
		&:first-child, &:last-child
			color: $color.table.text.weekend
			background-color: $color.background.body


/*! Calendar: Table::Body --------------------------------------------------- */
.cal_table_body td
	border: 1px solid $color.table.border.default
	height: 5rem
	font-size: 0.875rem
	vertical-align: top
	text-align: right
	// Edge Cell
	&:first-child, &:last-child
		color: $color.table.text.weekend

.cal_table_body_day:disabled
	color: $color.link.active

.cal_table_body_day,
.cal_table_body_day-void,
.cal_table_body_day-today
	display: inline-block
	padding: 0.25em
	text-align: center
	width: auto
	min-width: 1em
	line-height: 1em

.cal_table_body_day,
.cal_table_body_day-void
	border: none;
	background-color: transparent

.cal_table_body_day-void
	color: $color.table.text.void

.cal_table_body_day-today
	border-radius: 1.25em
	border-color: transparent
	color: $color.table.text.today
	background-color: $color.table.background.day
	&:disabled
		background-color: $color.link.active

.cursor-pointer:hover
	cursor: pointer
	& .cal_table_body_day,
	& .cal_table_body_day-void
		//text-decoration: underline
		color: $color.link.hover
	& .cal_table_body_day-today
		background-color: $color.link.hover


